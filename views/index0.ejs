<!DOCTYPE html>
<html>
<head>
	<title>	Movie App </title>
	<% include head %>
</head>
<body>
	<% include navbar %>

	<div class="container">
		<div class="row">
			<div class="col-sm-12">
				<h1>Now Playing</h1>
			</div>
			<div class="col-sm-12">
				<% jsonData.forEach((movie) => { %>
					<div class="col-md-3 col-sm-4 poster">
						<a href="/movie/<%= movie.id %>"><img class="hvr-grow" src="<%= imageBaseUrl + movie.poster_path %>"></a>		<!--- 'imageBaseUrl' added to res.locals on index.js by middleware so it's available to all routes --->
					</div>
				<% }) %>
			</div>
		</div>
	</div>

	<% if((typeof user != 'undefined') && (typeof sessionId != 'undefined') && (typeof sessionId != '')) { %>
		<% include authenticated-modal %>
	<% } %>
</body>
</html>
