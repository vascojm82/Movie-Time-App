<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
	  <meta name="viewport" content="width=device-width, initial-scale=1">
		<title>	Movie App </title>
		<% include head %>
	</head>
	<body>
		<% include navbar %>

		<div class="container">
			<div class="row">
				<div class="col-sm-12">
					<h1 class="heading-movies">Now Playing</h1>
				</div>
				<div class="col-sm-12">
					<% jsonData.forEach((movie) => { console.log(movie.adult);%>
						<div class="col-md-3 col-sm-4 poster">
							<a href="/movie/<%= movie.id %>"><img class="hvr-grow" src="<%= imageBaseUrl + movie.poster_path %>"></a>		<!--- 'imageBaseUrl' added to res.locals on index.js by middleware so it's available to all routes --->
						</div>
					<% }) %>
				</div>
			</div>
		</div>
		<% if((typeof user != 'undefined') && (flag === 0)) { %>
			<% console.log("About to open modal, flag: " + flag); %>
			<% include authenticated-modal %>
		<% } %>
	</body>
</html>
